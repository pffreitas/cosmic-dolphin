{
  "name": "@cosmic-dolphin/shared",
  "version": "1.0.0",
  "description": "Shared utilities and types for Cosmic Dolphin",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "bun run tsc",
    "dev": "bun run tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:db:up": "docker-compose -f ../../docker-compose.test.yml up -d",
    "test:db:down": "docker-compose -f ../../docker-compose.test.yml down -v",
    "test:db:reset": "bun run test:db:down && bun run test:db:up"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "cheerio": "^1.0.0-rc.12",
    "kysely": "^0.28.7",
    "pg": "^8.16.3",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/jest": "^30.0.0",
    "@types/pg": "^8.15.5",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.4"
  }
}